<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>/jsp/login.jsp</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>Security</filter-name>
        <filter-class>controller.filter.SecurityFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>Security</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>RoleSecurity</filter-name>
        <filter-class>controller.filter.RoleSecurityFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>RoleSecurity</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>Authorizing</filter-name>
        <filter-class>controller.filter.AuthorizingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>Authorizing</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>СacheDisabling</filter-name>
        <filter-class>controller.filter.CacheDisablingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>СacheDisabling</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>controller.FrontController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>


    <resource-ref>
        <description>Postgres data source</description>
        <res-ref-name>jdbc/postgres</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>